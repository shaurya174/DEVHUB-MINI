<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen">

  <!-- Header -->
  <header class="sticky top-0 z-50 shadow-md">
    <div class="max-w-7xl mx-auto px-6 py-5 flex flex-col md:flex-row justify-between items-center gap-3 md:gap-0">
      <h1 class="text-3xl font-bold tracking-wide">DevHub</h1>
      <a href="/new" class="btn-gradient px-5 py-2 rounded-xl font-semibold shadow-lg flex items-center gap-2">
        <i class="fas fa-plus"></i> New Post
      </a>
    </div>
  </header>

  <!-- Posts Section -->
  <main class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
    <% posts.forEach(post => { %>
      <div class="card p-8 rounded-2xl shadow-md flex flex-col justify-between relative">
        <div class="mb-4">
          <h2 class="text-2xl font-bold text-indigo-600 mb-3"><%= post.title %></h2>
          <p class="text-gray-800"><%= post.content %></p>
        </div>
        <div class="flex justify-between mt-4">
          <!-- Edit -->
          <form action="/edit/<%= post.id %>" method="GET">
            <button type="submit" class="btn-gradient px-4 py-2 rounded-xl font-semibold flex items-center gap-1">
              <i class="fas fa-edit"></i> Edit
            </button>
          </form>

          <!-- Delete -->
          <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
            <button type="submit" class="btn-red px-4 py-2 rounded-xl font-semibold flex items-center gap-1">
              <i class="fas fa-trash-alt"></i> Delete
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  </main>

</body>
</html>
